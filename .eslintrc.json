{
    "plugins": ["cypress","chai-friendly"],
    "env": {
        "browser": true,
        "es2021": true,
        "cypress/globals": true
    },
    "extends": ["standard","plugin:cypress/recommended","plugin:chai-friendly/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "no-unused-expressions": 0,
        "chai-friendly/no-unused-expressions": 2
    }
}
